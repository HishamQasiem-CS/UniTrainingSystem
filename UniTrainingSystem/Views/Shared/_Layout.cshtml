<!-- Additional CSS Files -->
<link rel="stylesheet" type="text/css" href="/HomePage/assets/css/bootstrap.min.css">

<link rel="stylesheet" type="text/css" href="/HomePage/assets/css/font-awesome.css">

<link rel="stylesheet" href="/HomePage/assets/css/templatemo-training-studio.css">
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UniTrainingSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UniTrainingSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav" >
                        <!-- ***** Logo Start ***** -->
                        <a asp-action="Index" asp-controller="Home" class="logo">Unit <em> Training</em></a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">

                            <li class="scroll-to-section"><a asp-action="Index" asp-controller="Home" class="active">Home</a></li>
                            <li class="scroll-to-section"><a href="#features">About</a></li>
                            <!--
                            <li class="scroll-to-section"><a href="#our-classes">Classes</a></li>
                            <li class="scroll-to-section"><a href="#schedule">Schedules</a></li>-->
                            <li class="scroll-to-section"><a href="#contact-us">Contact</a></li>

                            
                             @if (_signInManager.IsSignedIn(User))
                            {
                                <li class="scroll-to-section"><a asp-action="Chat" asp-controller="Home">Chat</a></li>

                               <a asp-action="DeatilsUer" asp-controller="Home" class="btn btn-primary" style="height:40px;">Profile</a>
                                <form asp-action="Logout" asp-controller="Account"  method="post" style="margin-left:10px;">
                                    <button type="submit" class="btn btn-danger">
                                        Logout

                                    </button>
                                </form>
                                

                            }
                            else
                            {
                                <li class="main-button"><a asp-action="Login" asp-controller="Account">Login</a></li>

                            }
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <p>
                        Copyright &copy;Unit Training

                        - Designed by <a asp-action="Index" asp-controller="Home" target="_parent">Unit Training</a>
                    </p>

                    <!-- You shall support us a little via PayPal to info@templatemo.com -->

                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/HomePage/assets/js/jquery-2.1.0.min.js"></script>

    <!-- Bootstrap -->
    <script src="/HomePage/assets/js/popper.js"></script>
    <script src="/HomePage/assets/js/bootstrap.min.js"></script>

    <!-- Plugins -->
    <script src="/HomePage/assets/js/scrollreveal.min.js"></script>
    <script src="/HomePage/assets/js/waypoints.min.js"></script>
    <script src="/HomePage/assets/js/jquery.counterup.min.js"></script>
    <script src="/HomePage/assets/js/imgfix.min.js"></script>
    <script src="/HomePage/assets/js/mixitup.js"></script>
    <script src="/HomePage/assets/js/accordions.js"></script>

    <!-- Global Init -->
    <script src="/HomePage/assets/js/custom.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
