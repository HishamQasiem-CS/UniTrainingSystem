@model IEnumerable<Company>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<style>
    .main-nav {
        background-color: green;
    }
   
</style>
<link href="~/search/main.css" rel="stylesheet" />
<div class="input-group rounded" style="margin-top:90px">
    <input type="search" class="form-control rounded" placeholder="Search of Company" aria-label="Search" aria-describedby="search-addon" />
    <span class="input-group-text border-0" id="search-addon">
        <i class="fas fa-search"></i>
    </span>
</div>
<div class="row menu-container" >
    @foreach (var item in Model)
    {


        <div class="col-lg-6 menu-item filter-starters" style="padding-top:30px;">
            <div class="menu-content" >
                <div>
                    <img src="~/image/login.jpg" class="img-thumbnail" style="width:150px;height:150px;" />
                </div>
                <span style="font-weight:bold;">Company Name: </span>
                <a asp-action="DetailsCompany" asp-controller="Home" asp-route-id="@item.CompanyId" title="put here">@item.CompanyName</a>
            </div>
            <div class="menu-ingredients">
                <span style="font-weight:bold;">Description: </span>
                @item.Description
                <br />
                <br />
                <form method="post" asp-action="DetailsCompany" asp-controller="Home" asp-route-id="@item.CompanyId">
                    <button type="submit" class="btn btn-primary">Send </button>
                </form>
            </div>
        </div>
    }
</div>
