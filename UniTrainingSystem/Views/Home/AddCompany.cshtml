@model AddCompanyViewModel

@{
    ViewData["Title"] = "Add Company";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<h2>@ViewData["Title"]</h2>

<form asp-action="AddCompany" method="post" asp-controller="Home"  style="margin-top:100px;">
    <div class="form-group">
        <label asp-for="CompanyName"></label>
        <input asp-for="CompanyName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label>Select Training Types:</label>
        <label>Select Training Types:</label>
        @foreach (var trainingType in ViewBag.TrainingTypes)
        {
            <div class="form-check">
                <input type="checkbox" name="SelectedTrainingTypes" value="@trainingType.TrainingTypeId" />
                <label>@trainingType.TypeName</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Add Company</button>
    <a asp-action="Index" asp-controller="Dashboard" class="btn btn-danger"> Cancel</a>
</form>