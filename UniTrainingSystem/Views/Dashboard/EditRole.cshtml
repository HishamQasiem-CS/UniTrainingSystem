@model EditRoleViewModel
@{
    Layout = null;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<h1 style="margin-left:50px;margin-top:20px;">Edit Admin</h1>

<form asp-action="EditRole" asp-controller="Dashboard" method="Post" style="margin-left:50px;margin-top:20px;">
    <div class="form-group">
        <div class="col-md-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label >
            Admin Name
        </label>
        <div class="col-md-10">
            <input asp-for="RoleName" class="form-control" />
            <span class="text-danger" asp-validation-for="RoleName"></span>
        </div>
    </div>
    <div class="form-group">
        <div>
            <button type="submit" class="btn btn-primary">Update Role</button>
        </div>
        <a asp-action="Index" asp-controller="Dashboard" class="btn btn-danger" style="margin-top:10px;">Cancel</a>

    </div>

    <br />






    @*Area Users in this Role*@

    <div class="card">

        <div class="card-header">
            <h4>Users in this role</h4>


        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h4 class="card-title">@user</h4>
                }
            }
            else
            {
                <h4 class="card-title text-danger">No User in this role ........</h4>
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUserInRole" asp-route-id="@Model.Id" class="btn btn-primary">Add or Remove from this Role </a>
        </div>


    </div>
</form>